/*主容器*/
.stepper {
    width: 178rpx;
    height: 58rpx;
    position: absolute;
    right: 0px;
    bottom: 0px;
}
.stepper text {
    width: 48rpx;
    height: 48rpx;
    line-height: 39rpx;
    text-align: center;
    float: left;
    border-radius: 50%;
    border: 1px solid #ccc;
    margin: 0 5rpx;
}
.stepper input {
    width: 48rpx;
    height: 48rpx;
    line-height: 39rpx;
    float: left;
    margin: 0 auto;
    text-align: center;
    font-size: 22rpx;
    border-radius: 50%;
    color: #1a1a1a;

}
.stepper .normal{
    color: black;
}
.stepper .disabled{
    color: #ccc;
}
