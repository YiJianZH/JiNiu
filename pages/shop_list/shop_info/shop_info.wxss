/*shop_info.wxss*/
page{
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}
.info_head{
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-bottom: solid 1px #e6e6e6;
}

.ptDiv{
  overflow: hidden;
}

.ptTXT{
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  padding-bottom: 15rpx;
  padding-top: 15rpx;
  text-align: center;
}

.info_head text{
  display: block;
  font-size: 28rpx;
  color: #333333;
  width: 95%;
  height: inherit;
  margin: 0 auto;
  line-height: 90rpx;
  text-align: right;
}
.info_ul{
  width: 100%;
  /* height: 240rpx; */
  border-bottom: solid 1px #e6e6e6;
  background-color: #fff;
  overflow: hidden;
}
.info_li{
  width: 95%;
  height: 185rpx;
  margin:27.5rpx auto;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  -webkit-flex-direction: row;
  -moz-flex-direction: row;
  -o-flex-direction: row;
}
.info_li_img{
  width: 130rpx;
  height: 130rpx;
  margin: 27.5rpx auto;
  position: relative;
}
.info_li_imga{
  display: block;
  width: 100%;
  height: 100%;
}
.info_li_text{
  width: 500rpx;
  height:auto;
  margin-left:44rpx;
}
.info_li_a{
  width: 80%;
  height: auto;
  font-size: 25rpx;
  color: #1a1a1a;
  text-align: left;
  display: block;
  line-height: 38rpx;
}
.info_li_b{
  font-size: 26rpx;
  color: #b3b3b3;
  margin-top: 20rpx;
  display: block;
}
.info_li_c{
  width:100%;
  height:35rpx;
  font-size:28rpx;
  color:#ff0000;
  line-height:35rpx;
  margin-top:20rpx;
  position: relative;
}
.info_li_c text:first-child{
  font-size: 28rpx;
  color: #999;
}
.info_li_c text:nth-child(2){
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 20rpx;
}
.info_li_dw{
  width: 50rpx;
  height: auto;
  font-size: 28rpx;
  color: #999999;
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
}
.info_li_dw text{
  margin-left: 5rpx;
  font-size: 32rpx;
}




.ptDa{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0px;
  top: 0px;
  z-index: 8;
  background-color: rgba(195,195,195,0.7);
  overflow: hidden;
}

.ptDa text{
  font-size: 28rpx;
  color: #666;
  text-align: center;
  display: block;
  line-height: 130rpx;

}





