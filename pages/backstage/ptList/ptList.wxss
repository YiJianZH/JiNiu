
page{
  height: 100%;
  overflow: hidden;
  width: 100%;
}

.list{
  width: 92%;
  height: auto;
  overflow: hidden;
  margin: 0 auto;
  padding-bottom: 30rpx;
  padding-top: 30rpx;
}

.listAdd{
  width: 150rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 4px;
  background-color: #FF9900;
  float: right;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
}

.clear{
  clear: right;
}

.ul{
  overflow: hidden;
  display: flex;
  margin-top: 30rpx;
  background-color: #f5f5f5;
}

.ul .li{
  overflow: hidden;
  width: 33.33%;
  height: auto;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}

.ulList{
  overflow: auto;
  height: 80%;
}

.ulList::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.ulTop{
  overflow: hidden;
  display:flex;
}

.ulTop .li{
  overflow: hidden;
  width: 33.33%;
  float: left;
  height: auto;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  padding-bottom: 20rpx;
  padding-top: 20rpx; 
  border-bottom: solid 1px #e6e6e6;
}

.ulTop .li text{
  font-size: 28rpx;
 color: #FF9900;

}

.ulTop .li text:last-child{
  color: #666;
   padding-left: 1em;
}

.listPop{
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: rgba(0,0,0,0.4);
  position: fixed;
  left: 0px;
  top: 0px;
  z-index: 10;
}

.listBai{
  width: 80%;
  height: auto;
  overflow: hidden;
  background-color: #fff;
  border-radius: 4px;
  padding-top: 30rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -40%;
  margin-top: -52%;
}

.listCen{
  width: 90%;
  height: auto;
  overflow: hidden;
  margin: 0 auto;
  padding-bottom: 30rpx;
}

.popLi{
  overflow: hidden;
  display: flex;
  padding-bottom: 15rpx;
  padding-top: 15rpx;
  align-items: center;
  justify-content: space-between;
}

.popLi text{
  font-size: 28rpx;
  color: #999;
}

.popDiv{
  width: calc( 100% - 150rpx );
  height: auto;
  overflow: hidden;
  position: relative;
}

.popDiv input{
  width: 100%;
  height: auto;
  overflow: hidden;
  font-size: 28rpx;
  color: #333;
  border: none;
  position: relative;
  z-index: 1;
}

.popDiv image{
  display: block;
  width:14rpx; 
  height: 10rpx;
  position: absolute;
  right: 0px;
  top: 50%;
  margin-top: -5rpx;
  z-index: 2;
}

.btn{
  overflow: hidden;
  border-top: solid 1px #e6e6e6;
  display: flex;
}

.btn > view{
  width: 50%;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  padding-bottom: 30rpx;
  padding-top: 30rpx;

}

.btn > view:last-child{
  color: #FF9900;
  border-left: solid 1px #e6e6e6;
}