/* pages/backstage/home/storeOperation/activityMan/addManjian/chooseGoods/cg.wxss */
page{
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}

/* 顶部搜索框 */
.top_search {
  width:100%;
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  height:70rpx; 
  border-bottom: 1px solid #f5f5f5;
}
.top_search .icon_search {
  width:35rpx;
  height:36rpx;
  display:block;
  position:absolute;
  top:49rpx;
  left:50rpx;
}
.top_search input {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  font-size: 30rpx;
  padding-left: 67rpx;
  border-radius: 5px;
  margin: 30rpx;
}

.container {
  position: relative;
  width: 100%;
  height: auto;
  background-color: #fff;
  color: #939393;
}

/*左侧栏主盒子*/

#nav_left {
  display: inline-block;
  width: 25%;
  height: 100%;
  background: #f0f0f0;
  position: fixed;
  left: 0px;
  top: 3.6rem;
  z-index: 1000;
  text-align: center;
  box-shadow: inset 0 1px 6px rgba(0, 0, 0, 0.1);
}

/*左侧栏list的item*/

#nav_left .nav_left_items {
  height: 2rem;
  line-height: 2rem;
  padding: 6px 0;
  border-bottom: 1px solid #dedede;
  font-size: 26rpx;
  color: #333;
}

#nav_left .nav_left_items.active {
  background: #fff;
  border-left: 6rpx solid #f90;
  color: #f90;
}
.MenList {
  height: 100%;
}
#wrap,
#wrap_third {
  animation-fill-mode: forwards;
  width: 100%;
  overflow: hidden;
}
#wrap .box,
#wrap_third .box {
  width: 100%;
  background: #fff;
  overflow: auto;
}
.second_lists {
  overflow: auto;
  width: 100%;
  padding: 10rpx 0;
  font-size: 31rpx;
  color: #707070;
}
.third_lists {
  overflow: auto;
  width: 100%;
  padding: 10rpx 0;
  font-size: 30rpx;
  text-indent: 15rpx;
  color: #999;
}
@keyframes slidedown {
  from {
    height: 0;
  }
  to {
    height: 250rpx;
  }
}
@keyframes slideup {
  from {
    height: 250rpx;
  }
  to {
    height: 0;
  }
}
.show {
  display: block;
}
.hide {
  display: none;
}
.open {
  animation: slidedown .2s;
}
.close {
  animation: slideup .2s;
}


/*右侧栏主盒子*/
#nav_right {
  position: fixed;
  top: 3.6rem;
  right: 0;
  flex: 1;
  width: 75%;
  height: 100%;
  box-sizing: border-box;
  z-index: 0;
  overflow: hidden;
  padding-bottom:100rpx;
}
.right_lists {
  padding: 0 30rpx;
  margin-bottom:200rpx;
}
.top_bar {
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  height:1.6rem;
  position: fixed;
  top: 150rpx;
  overflow: hidden;
}
.top_bar .goods_count {
  line-height:62rpx;
  display: block;
  float: left;
}
.checkbox_img {
  width: 40rpx;
  height: 40rpx;
}
.checkbox_img image {
  width: 100%;
  height: 100%;
  display: block;
}
.lists_con {
  font-size: 26rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #e6e6e6;
}
.fromLeftBar {
  display: block;
  width: 100%;
  background: #f5f5f5;
  font-size: 28rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
}
.lists_con .con_top {
  display: flex;
  /* justify-content: space-between; */
}
.lists_con .con_top .good_img {
  width: 140rpx;
  height: 140rpx;
  float: left;
  margin-right: 30rpx;
}
.lists_con .con_top .stock {
  overflow: hidden;
}
.right_wrap {
  width: 100%;
}
.right_wrap .top_wrap,
.right_wrap .bottom_wrap {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}

button {
  width: 90%;
  line-height: 90rpx;
  color: #fff;
  background: #f90;
  text-align: center;
  border-radius: 4px;
  font-size: 32rpx;
  position: fixed;
  bottom:37rpx;
  left:5%;
  z-index: 1000;
}