/* pages/home/storeOperation/so.wxss */
page{
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}
.so {
  font-size: 28rpx;
  padding: 0 30rpx;
}
.so .lists {
  width: 100%;
  height: 200rpx;
  border-radius: 4px;
  box-shadow: 0 0 8px 1px rgba(0, 0, 0, .1);
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.lists .left_wrap {
  display: flex;
  line-height: 200rpx;
}
.lists .left_wrap .icon_huodong {
  width: 82rpx;
  height: 82rpx;
  margin:57rpx 30rpx 0 40rpx;
}
.lists .right_wrap {
  margin-top: 74rpx;
  margin-right: 40rpx;
}
.lists .right_wrap .icon_goArrow {
  width: 12rpx;
  height: 21rpx;
}

.tabBar {
  background: #fff;
  border-top: 1px solid #f5f5f5;
  position: fixed;
  bottom: 0;
  z-index: 1001;
  width: 100%;
  padding: 5rpx 0 10rpx 0;
  font-size: 24rpx;
  color: #999;
}
.tabBar .con_info {
  display: flex;
  justify-content: space-around;
  width: 80%;
  margin: 0 auto;
}
.tabBar .w image {
  width: 50rpx;
  height: 50rpx;
  margin: 5rpx auto;
  display: block;
}
.tabBar .w text {
  text-align: center;
  display: block;
}
.color_f90 {
  color: #f90;
}