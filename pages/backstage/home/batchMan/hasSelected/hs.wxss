page{
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}
.hs {
  font-size: 28rpx;
}
.con {
  padding: 0 20rpx;
}
.lists {
  margin-bottom: 100rpx;
}

.each_list {
  padding: 30rpx 0;
  border-bottom: 1px solid #e6e6e6;
  display: flex;
  justify-content: space-between;  
}
.each_list .w_right .w {
  display: flex;
  margin-bottom:20rpx;
}
.wrap_a {
  display: flex;
  justify-content: space-between;
}
.each_list .w_right label {
  line-height: 50rpx;
  display: block;
  margin-right: 15rpx;
}
.each_list .w_right .input_w {
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  border: 1px solid #e6e6e6;
  border-radius: 3px;
  padding-left: 15rpx;
}
.each_list .w_right .w100 .input_w {
  width: 430rpx;
}
.each_list .w_right .input_w input {
  width: 90%;
  height: 100%;
}

.image_fruits {
  width: 170rpx;
  height: 170rpx;
}
.color_666 {
  color: #666;
}

button {
  width: 90%;
  line-height: 90rpx;
  color: #fff;
  background: #f90;
  text-align: center;
  border-radius: 4px;
  font-size: 32rpx;
  position: fixed;
  bottom:37rpx;
  left:5%;
  z-index: 999;
}