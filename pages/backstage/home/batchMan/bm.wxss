/* pages/home/batchMan/bm.wxss */
page{
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}

.container {
  position: relative;
  width: 100%;
  height: auto;
  background-color: #fff;
  color: #939393;
}

/*左侧栏主盒子*/
#nav_left {
  display: inline-block;
  width: 25%;
  height: 100%;
  background: #f0f0f0;
  position: fixed;
  left: 0px;
  top: 0;
  z-index: 1000;
  text-align: center;
  box-shadow: inset 0 1px 6px rgba(0, 0, 0, 0.1);
}

/*左侧栏list的item*/

#nav_left .nav_left_items {
  width: 90%;
  padding:10rpx;
  height: 20rpx;
  line-height: 40rpx;
  border-bottom: 1px solid #dedede;
  font-size: 28rpx;
  color: #333;
  display: table;
  vertical-align: middle;
}

#nav_left .nav_left_items.active {
  background: #fff;
  border-left: 6rpx solid #f90;
  color: #f90;
}
.MenList {
  height: 100%;
}
#wrap,
#wrap_third {
  animation-fill-mode: forwards;
  width: 100%;
  overflow: hidden;
}
#wrap .box,
#wrap_third .box {
  width: 100%;
  background: #fff;
  overflow: auto;
}
.second_lists {
  overflow: auto;
  width: 100%;
  padding: 10rpx 0;
  font-size: 31rpx;
  color: #707070;
}
.third_lists {
  overflow: auto;
  width: 100%;
  padding: 10rpx 0;
  font-size: 30rpx;
  text-indent: 15rpx;
  color: #999;
}
@keyframes slidedown {
  from {
    height: 0;
  }
  to {
    height: 250rpx;
  }
}
@keyframes slideup {
  from {
    height: 250rpx;
  }
  to {
    height: 0;
  }
}
.show {
  display: block;
}
.hide {
  display: none;
}
.open {
  animation: slidedown .2s;
}
.close {
  animation: slideup .2s;
}


/*右侧栏主盒子*/
#nav_right {
  position: fixed;
  top: 0;
  right: 0;
  flex: 1;
  width: 75%;
  height: 100%;
  box-sizing: border-box;
  z-index: 0;
  overflow: hidden;
}
.right_lists {
  width: 100%;
  margin-bottom:200rpx;
}
.right_lists .top_bar {
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  padding:21rpx 32rpx;
  height:1.6rem;
}
.goods_count {
  line-height:56rpx;
}
.goods_man {
  padding: 0 20rpx;
  line-height: 60rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 40px;
}
.lists_con {
  font-size: 30rpx;
  padding: 20rpx;
}
.fromLeftBar {
  display: block;
  width: 100%;
  background: #f5f5f5;
  font-size: 28rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
}
.lists_con .con_top {
  display: flex;
  justify-content: space-between;
}
.lists_con .con_top .left_wrap {
  /* width: 70%; */
  font-size: 32rpx;
  display: flex;
}
.lists_con .con_top .good_img {
  width: 140rpx;
  height: 140rpx;
  float: left;
  margin-right: 30rpx;
}
.lists_con .con_top .left_wrap text {
  line-height: 73rpx;
  display: block;
}
.lists_con .con_top .left_wrap .good_size {
  font-size: 32rpx;
  color: #333;
  line-height:134rpx;
}
.lists_con .con_top .left_wrap .good_price {
  color: red;
}
.lists_con .con_top .select_img {
  width: 45rpx;
  height: 45rpx;
  margin-top:50rpx;
}
.lists_con .con_top .stock {
  margin-top:93rpx;
}
.lists_con .setting_btn {
  width: 100%;
  line-height: 60rpx;
  border: 1px solid #f90;
  color: #f90;
  border-radius: 40px;
  text-align: center;
  margin-top: 20rpx;
}

.next_btn {
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1000;
  width: 100%;
}
.next_btn button {
  margin: 30rpx auto 10rpx auto;
  background: #999;
  color: #fff;
  font-size: 32rpx;
  line-height: 80rpx;
  border-radius: 4px;
  display: block;
}
.selectItem{
  width:94%;
  height: auto;
  overflow: hidden;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}
.selectItem button{
width:200rpx;
float:left;
font-size:12px;
padding-left:0px;
padding-right:0px;
margin-left:0px;
margin-right:0px;

}
.selectNext{
  width:100%;
  height: auto;
  overflow: hidden;
  background-color: #fff;
  padding-bottom: 15rpx;
  padding-top: 15rpx;
}

.selectNext button{
  margin: 0 auto;
width: 94%;
font-size:12px;
padding-left:0px;
padding-right:0px;
display: block;
background-color: #f90;
}
