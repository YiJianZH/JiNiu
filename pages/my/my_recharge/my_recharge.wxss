/* pages/my/my.wxss */
page{
  width: 100%;
   height: 100%;
   background-color: #fff;
   font-family: "微软雅黑";
}
.yj_a{
  width: 100%;
  height: 420rpx;
  position: relative;
  overflow: hidden;
}
.yj_img{
 
  width:750rpx;
  height: 420rpx;
  display: block;
  position: absolute;
  left: 0px;
  top: 0px; 
}
.yj_b{
  width: 90%;
  height: auto;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -45%;
  margin-top: -10%;
}
.yj_ba{
  font-size: 28rpx;
  color: #66f470;
}
.yj_bb{
  width: 100%;
  height: auto;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  -webkit-flex-direction: row;
  -moz-flex-direction: row;
  -o-flex-direction: row;
  margin-top: 20rpx;
}
.yj_bb text{
  font-size: 46rpx;
  font-weight: bold;
  color: #fff;
  display: block;
  width: 70%
}
.yj_bc{
  width: 45%;
  height: auto;
  overflow: hidden;
  display: flex;
justify-content: space-between;
-webkit-justify-content: space-between;
-moz-justify-content: space-between;
-o-justify-content: space-between;
}
.button{
   height: 40rpx;
  width: 110rpx;
  color: #fff;
  padding:0rpx;
  text-align: center;
  border: solid 2px #fff;
  border-radius: 50rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  background-color: none !important;
  display: inline-block;
  }

.yj_mx{
  width: 100%;
  height: auto;
  background-color: #f5f5f5;
}
.yj_mx text{
  width: 95%;
  height: auto;
  margin: 0 auto;
  font-size: 32rpx;
  color: #999999;
  line-height: 90rpx;
  display: block;
}

.yj_ul{
  width: 100%;
  height: auto;
  overflow: hidden;
  background-color: #fff;
}
.li{
  width: 95%;
  height: auto;
  overflow: hidden;
  margin: 0 auto;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  border-bottom:solid 1px #e6e6e6;
}
.li_a{
  width: 100%;
  font-size: 32rpx;
  color: #333;
  height: auto;
  line-height: 40rpx;
}
.li_a text{
float:right;
display:inline-block;

}
text.li_b{
  font-size: 30rpx;
  color: #999999;
  line-height: 44rpx;
}
.yj{
  overflow:scroll;
}
.recharge{
  width:100%;
  height:100%;
  background:rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99;
  border-radius:5px;
}

.recharge .recharge-content{
width:80%;	
height:150px;	
margin:0 auto;	
margin-top:30%;	
background-color:#fff;    
z-index: 999;    
border-radius: 10px;
}
.recharge .recharge-content .recharge-title{
width:100%;
height:40px;
background-color:#66f470;
border-radius:10px 10px 0px 0px;
text-align:center;
line-height:40px;
}
#recharge-titles{
  color:#fff;
}
.recharge .recharge-content .recharge-money{
width:100%;
height:40px;
text-align:center;
line-height:60px;
}
.recharge .recharge-content .recharge-money input{
float:right;
width:60%;
height:60px;
font-size:18px;
line-height:60px;
}
.recharge .recharge-content .recharge-button{
width:100%;
height:100%;
text-align:center;
margin-left: 20%;
}
.recharge .recharge-content .recharge-button input{
height:40px;
line-height:40px;
text-align:right;
width:60%;
color:#fff;
background-color:#66f470;
border-radius:10px;
}
.Clessicon{
  margin-top:-10px;
  color:red;
  position:absolute;
  margin-left:33%;
}

.ptColor{
  overflow: hidden;
}
.ptColor .yj_ba{
  color: #fff;
}

.ptColor .recharge .recharge-content .recharge-title{
background-color:#0066ff;
}

.ptColor .recharge .recharge-content .recharge-button input{
background-color:#0066ff;
}

































