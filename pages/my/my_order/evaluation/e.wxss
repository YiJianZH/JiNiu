/* pages/my/my_order/evaluation/e.wxss */

.spacing {
  width: 100%;
  height: 30rpx;
  background: #f5f5f5;
}

.scorept{
  width: calc( 100% - 65px );
  height: auto;
  overflow: hidden;
  margin: 0 auto;
  display: flex;
}

.ptTxt{
  font-size: 28rpx;
  color: #666;
  border: solid 1px #666;
  background-color: transparent;
  border-radius: 4px;
  text-align: center;
  padding-left: 1em;
  padding-right: 1em;
  line-height:50rpx;
  margin-right: 0.5em;
}

.ptTxting{
  font-size: 28rpx;
  color: #fff;
  border: solid 1px transparent;
  background-color: #47b34e;
  border-radius: 4px;
  text-align: center;
  padding-left: 1em;
  padding-right: 1em;
  line-height:50rpx;
  margin-right: 0.5em;
}

.e {
  font-size: 32rpx;
}
.e .top {
  display: flex;
  padding: 30rpx;
}
.e .top .name {
  font-size: 34rpx;
}
.e .top image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 30rpx;
}
.e .bottom {
  padding: 0 30rpx;
}
.e .bottom .set_score > text {
  display: inline-block;
  padding-right: 40rpx;
}
.e .bottom .set_score {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1px solid #f5f5f5;
  align-items: center;
}
.e .bottom .set_score image {
  width: 39rpx;
  height: 39rpx;
  margin-right: 10rpx;
}
.e .bottom .edit_txt {
  padding: 30rpx 0;
}

button {
  width:90%;
  line-height:90rpx;
  margin:0 auto;
  color:#fff;
  background:#47b34e;
  border-radius:40px;
  position:fixed;
  bottom:3%;
  left:5%;
  font-size:34rpx;
}

.ptColor{
  overflow: hidden;
}

.ptColor button {
  background:#0066ff;}

.ptColor .ptTxting{
  background-color: #0066ff;
  }