/**选项卡*/
.swiper-tab{  
    width: 100%;  
    border-bottom: 1px solid #e6e6e6;  
    text-align: center;  
    line-height: 80rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    -webkit-flex-direction: row;
    -moz-flex-direction: row;
    -o-flex-direction: row;
    } 
.swiper-tab-list{  
  font-size: 30rpx;  
    display: block;
    width: 25%;  
    color: #333333;  
}  
.on{ color: #75dd86;  }  
  
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  
.swiper-box view{  
    text-align: center;  
}  

/***/
.yh-a{
  width: 100%;
  height: auto;
  background-color: #fff;
}
.yh_a_input{
  width: 90%;
  margin:0px auto;
  height: inherit;
  position: relative;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.yh-a input{
  width: 100%;
  border: solid 1px #47b34e;
  border-radius: 5px;
  height: 60rpx;
  font-size:26rpx;
  text-align: left;
  text-indent: 2em;
  line-height: 60px;
  color: #999999;
}
.yh_a_input button{
  width: 162rpx;
  height:62rpx;
  background-color: #47b34e;
border-top-left-radius:0px;
border-bottom-left-radius:0px;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  line-height: 62rpx;   
  position: absolute;
  right: -3px;
  top: 30rpx;
}
.yh_a_input button::after{
  border: none;
}



