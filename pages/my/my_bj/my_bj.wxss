/* pages/my/my.wxss */
page{
  width: 100%;
   height: 100%;
   background-color: #f5f5f5;
   font-family: "微软雅黑";
}
.bj_ul{
  width: 100%;
  height: auto;
  margin-top: 30rpx;
}
.bj_li{
  width: 100%;
  height: 120rpx;
  background-color: #fff;
}
.bj_li-a{
   width: 90%;
   height: inherit;
   margin: 0 auto;
   border-bottom: solid 1px #e6e6e6;
   display: flex;
   flex-direction: row;
   -webkit-flex-direction: row;
   -moz-flex-direction: row;
   -o-flex-direction: row;
   position: relative;
}
.bj_li-a text{
  font-size: 30rpx;
  color: #333333;
  line-height: 120rpx;
}
.bj_li_b{
  width: 86%;
  height: inherit;
}
.bj_li_b input{
 margin-top:15px;
text-align:right;
}
.bj_li_img{
  width: 92rpx;
  height: 92rpx;
  display: block;
  float: right;
  margin-top: 15rpx;
  border-radius:50%;

}
.my_list_ab{
  width: 25rpx;
  height: 35rpx;
  position: absolute;
  right: 0px;
  top: 50%;
  margin-top: -2%;
}
.my_list_img{
  width: 25rpx;
  height: 35rpx;
  display: block;
}
.bj_li_b text{
  font-size: 30rpx;
  color: #999999;
  text-align: right;
  display: block;
}
.btn-area{
  position:fixed;
  bottom:0;
  width:100%;
  height:100rpx;
  background-color:#47b34e;
  color:#fff;
}
.btn-area button{
  position:fixed;
  bottom:0;
  width:100%;
  height:100rpx;
  background-color:#47b34e;
  color:#fff;
}

.ptColor{
  overflow: hidden;
}

.ptColor .btn-area{
  background-color:#0066ff;
}
.ptColor .btn-area button{
  background-color:#0066ff;
}













