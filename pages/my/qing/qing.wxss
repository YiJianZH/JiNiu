
page{
  background-color: #f5f5f5;
}

.qingTop{
  width: 100%;
  height: 280rpx;
  overflow: hidden;
}

.qingTop image{
  display: block;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.qingCen{
  overflow: hidden;
}

.li{
  overflow: hidden;
  background-color: #fff;
}

.liCen{
  width: 95%;
  height: auto;
  overflow: hidden;
  border-bottom: solid 1px #e6e6e6;
  display: flex;
  align-items: center;
  margin: 0 auto;
  padding-bottom: 30rpx;
  padding-top: 30rpx;
  }

.li:last-child .liCen{
  border-bottom: none;
}

.liTxt{
  overflow: hidden;
  font-size: 28rpx;
  color: #333;
 width: 120rpx;
}  

.liTxt text{
  color: #f40527;
  margin-right: 0.5em;
}

.liCen input{
  width: calc( 100% - 140rpx );
  height: auto;
  overflow: hidden;
  font-size: 30rpx;
  color: #999;
  margin-left:0.5em; 
  display: block;
}

.qingBtn{
  width: 95%;
  height: 80rpx;
  background-color: #47b34e;
  line-height: 80rpx;
  font-size: 27rpx;
  color: #fff;
  text-align: center;
  border-radius: 6px;
  margin-top: 30px;
  margin-bottom: 33rpx;
}

.ptColor{
  overflow: hidden;
}

.qingBtn{
  background-color: #0066ff;}