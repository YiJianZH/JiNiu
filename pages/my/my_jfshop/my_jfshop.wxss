.jfshop_img{
  width: 750rpx;
  height: 300rpx;
  display: block;
}

.jfshop_a{
  width: 100%;
  height: auto;
  overflow: hidden;
  background-color: #fff;
}
.jfshop_b{
  width: 95%;
  height: auto;
  margin: 0 auto;
  font-size: 32rpx;
  color: #333333;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  }
.jfshop_b text{
  font-size: 26rpx;
  color: #47b34e;
  margin-left: 20rpx;
}
.ul{
  width: 710rpx;
  height: auto;
  overflow: hidden;
  margin: 0 auto;
}
.li{
  width: 346rpx;
  height: auto;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
  float: left;
}
.li:nth-of-type(even){
  float: right;
}
.li_img{
  width: 210rpx;
  height: 210rpx;
  display: block;
  margin: 0 auto;
}
.li_center{
  width: 90%;
  margin: 0 auto;
  height: auto;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.li_text{
  font-size: 32rpx;
  color: #1a1a1a;
  text-align: left;
  text-indent: 1em;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.li_a{
  width: 100%;
  height: 45rpx;
  overflow: hidden;
  font-size: 32rpx;
  color: #47b34e;
  margin-top: 10rpx;
  line-height: 45rpx;
  position: relative;
}
.li_a text{
  color: #999999;
}
.li_a .button{
  font-size: 26rpx;
  color: #47b34e;
  width: 90rpx;
  height: 36rpx;
  border-radius: 50rpx;
  position: absolute;
  right: 0rpx;
  top: 50%;
  margin-top: -18rpx;
  text-align: center;
  line-height: 36rpx;
  background-color: #fff;
  border: solid 1px #47b34e;
}


.ptColor{
  overflow: hidden;
}

.ptColor .jfshop_b text{
  color: #0066ff;
}

.ptColor .li_a{
  color: #0066ff;}
  
.ptColor .li_a .button{
  color: #0066ff;
  border: solid 1px #47b34e;
