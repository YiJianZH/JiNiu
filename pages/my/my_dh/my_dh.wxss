/**选项卡*/
.swiper-tab{  
    width: 100%;  
    border-bottom: 1px solid #e6e6e6;  
    text-align: center;  
    line-height: 80rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    -webkit-flex-direction: row;
    -moz-flex-direction: row;
    -o-flex-direction: row;
    } 
.swiper-tab-list{  
  font-size: 30rpx;  
    display: block;
    width: 33.33%;  
    color: #333333;  
}  
.on{ color: #38c541;  }  
  
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  
.swiper-box view{  
    text-align: center;  
}  

/**/
.ul{
  width: 90%;
  margin:30rpx auto 0 auto;
  height: auto;
  background-color: #fff;
  overflow: hidden;
  border-radius: 20rpx;
}
.li{
  width: 90%;
  height: auto;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  -webkit-flex-direction: row;
  -moz-flex-direction: row;
  -o-flex-direction: row;
  position: relative;
}
view.li_a{
  font-size: 32rpx;
  color: #333333;
  text-align: left;
}
view.li_b{
  font-size: 28rpx;
  color: #47b34e;
  text-align: left;
  line-height: 52rpx;
}
view.li_b{
  color: #333;
}
.li-one{
  width: 70%;
  height: auto;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.li-two{
  width: 30%;
  height: auto;
  position: absolute;
  right: 0rpx;
  top: 50%;
  margin-top: -5%;
}
.li-two button{
  width: 155rpx;
  height: 52rpx;
  background-color: #fff;
  font-size: 24rpx;
  color: #47b34e;
  text-align: center;
  line-height: 52rpx;
  border: solid 1px  #47b34e;
  border-radius: 50rpx;
  padding: 0px;
}
.li-two button::after{
  border:none;
}


