/**index.wxss**/
.swiper-tab{
	width: 100%;
	border-bottom: 2rpx solid #e6e6e6;
	text-align: center;
  background-color: #fff;
  display:flex;
  position: fixed;
  left: 0px;
  top: 0px;
  z-index: 9;
  }

.swiper-tab-list{  
  font-size: 30rpx;
    display: block;
	width: 50%;
	color: #666666;
  padding-bottom: 30rpx;
  padding-top: 30rpx;
  position: relative;
}

.on{
  color: #de0927;
}

.on .line{   
  width: 120rpx;
  height: 2px;
  background-color: #de0927;
  overflow: hidden;
  margin: 0 auto;
  }
 
.swiper-box{ 
  display: block; height: 100%; width: 100%; overflow: hidden; 
  margin-top: 105rpx;
  }

.line{
  width: 120rpx;
  height: 2px;
  background-color: transparent;
  overflow: hidden;
  margin: 0 auto;
  position: absolute;
  bottom: 0px;
  left: 34%;
  margin-left: -60rpx;
}

.one{
  overflow: hidden;
}

.oneLi{
  overflow: hidden;
  background-color: #fff;
}

.liCen{
  width: 95%;
  height: auto;
  overflow: hidden;
  padding-bottom: 30rpx;
  padding-top: 30rpx;
  border-bottom: solid 1px #e6e6e6;
  margin: 0 auto;
  display: flex;
  align-items: center;
}

.liCen > text, .liTit{
  width: 160rpx;
  display: block;
  height: auto;
  overflow: hidden;
  font-size: 30rpx;
  color: #333;
  text-align: left;
}

.liCenPt{
  display: block;
}

.liTit{
  width: 100%;
  height: auto;
  overflow: hidden;
  text-align: left;
}

.liTit text{
  font-size: 26rpx;
  color: #999;
}

.liIn{
  width: calc( 100% - 180rpx );
  height: auto;
  overflow: hidden;
  margin-left: 2em;
}

.liIn input{
  width: 100%;
  height: auto;
  overflow: hidden;
  border: none;
  font-size: 30rpx;
  color: #666666;
  text-align: left;
}

.oneLiB .liIn input{
  width:70%;
}

.liCen textarea{
  width: 100%;
  height: auto;
  overflow: hidden;
  border: none;
  font-size: 30rpx;
  color: #666666;
  text-align: left;
}

