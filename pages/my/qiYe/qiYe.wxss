/* oneLiB */

.oneLiB{
  overflow: hidden;
  position: relative
}

.oneLiB > button{
  width: 200rpx;
  height: 100%;
  position: absolute;
  right: 0px;
  top: 0px;
  font-size: 28rpx;
  color: #47b34e;
  line-height: 47.4px;
  background-color: transparent;
  border: none;
}

.oneLiB > button::after{
  border: none;
}

.ptColor{
