/* pages/my/my.wxss */

page{
  width: 100%;
   height: 100%;
   background-color: #f5f5f5;
   font-family: "微软雅黑";
}
.my_head{
  display: block;
  width: 100%;
  height: 466rpx;
  background-color: #fff;
  overflow: hidden;
  position: relative;
}
.my_back{
  width: 100%;
  height: 466rpx;
  position:absolute;
  left: 0px;
  top: 0px;
  z-index: 1;
}
.my_head_a{
  width: 95%; 
  height:466rpx;
  overflow: hidden;
  position: absolute;
  left: 50%;
  top: 0;
  margin-left: -47.5%;
  z-index: 2;
}
.my_one{
  width:100%;
  overflow: hidden;
}

button::after{
  border: none;
}

.merchant_entrance {
  width:180rpx;
  height:60rpx;
  position: fixed;
  right: -17rpx;
  top: 90rpx;
  z-index: 1000;
  text-align: center;
  background: transparent;
}

.merchant_entrance text {
  width: 100%;
  line-height: 60rpx;
  position: absolute;
  left: 0px;
  top: 0px;
  opacity: 1;
  border-radius: 40px;
  font-size: 28rpx;
  color: #fff;
  background: rgb(124, 231, 103);
  border: none;
}

.merchant_entrance image {
  display: block;
  width: 100%;
  height: 100%;
}

.my_a{
  width: 100rpx;
  height: auto;
  float: right;
}
.my_a_img{
  width:30rpx;
  height: 31rpx;
  display: inline-block; 
}
.my_a text{
  font-size: 24rpx;
  color: #fff;
  line-height: 31rpx;
  margin-left:15rpx;
}
.my_b{
  width: 80%;
  margin: 0rpx auto 0px auto;
}
.my_b view:first-child{
  font-size: 36rpx;
  color: #fff;
  text-align: left;
    display: block;
}
.my_b view:last-child{
  font-size: 24rpx;
  color: #fff;
  text-align: left;
  display: block;
  margin-top: 23rpx;
}
.my_b_a{
  display: inline-block;
}
.my_tx{
  width: 100%;
  height: 133rpx;
  margin:0 auto;
  overflow: hidden;
}
.my_tx_img{
  width: 133rpx;
  height: 133rpx;
  display: block;
  border-radius:50%;
  margin: 0 auto;

}
.my_one_ul{
  width: 100%;
  height: auto;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
}
.my_one_ul view{
  width: 50%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333333;
}

.my_one_ul view:last-child{
  position: relative;
}

#my{
  position: absolute;
  right: 0px;
  top: 50%;
  margin-right: 0px;
  margin-top: -14rpx;
}


.my_one_ul view:nth-child(-n+2){
  border-right: solid 1px #e6e6e6;
}

.my_one_ul view:nth-child(2) text{
  color: #ff0000;
}
/*my_list_dl*/
.my_list_center{
  width: 100%;
  height: 155rpx;
  overflow: hidden;
  background-color: #fff;
  margin-top: 30rpx;
}
.my_list_dl{
  width: 90%;
  margin: 0 auto;
  height: inherit;
