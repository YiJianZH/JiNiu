  -o-flex-direction: row;
}
.my_list_dd{
  width: 25%;
  height: 155rpx;
}
.my_list_dd_a{
  width: 60rpx;
  height: 60rpx;
  position: relative;
  margin:30rpx auto 0 auto;
}
.my_dl_img{
  width:60rpx;
  height: 60rpx;
  display: block;
   }
.dd_a_y{
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background-color: #ff0000;
  font-size: 20rpx;
  color: #fff;
  line-height: 32rpx;
  text-align: center;
  position: absolute;
  left:55%;
  top:-10%;
  display: none;
}
.my_list_dd:nth-child(3) .dd_a_y{
  display: block;
}
.my_list_dd text{
  font-size: 30rpx;
  color: #333333;
  text-align: center;
  margin-top: 10rpx;
