@import "/wxParse/wxParse.wxss";
page{
  width: 100%;
  height: 100%;
   overflow-x: hidden;}

view {
  overflow: unset;
}

/*总体主盒子*/

.container {
  position: relative;
  width: 100%;
  background-color: #fff;
  color: #939393;
}

movable-view {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  z-index: 1002;
}

movable-area {
  height: 100%;
  width: 100%;
  overflow: hidden;
  position: fixed;
  right: 0;
  top: 0;
  z-index: 1001;
}

movable-area .cart {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: #47b34e;
  position: relative;
}

movable-area .cart button {
  width: 0;
  height: 0;
  opacity: 0;
}

movable-area .cart image {
  width: 50rpx;
  height: 50rpx;
  margin: 22rpx;
}

movable-area .cart text {
  display: block;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 40px;
  padding: 0 5rpx;
  color: #fff;
  font-size: 20rpx;
  background: red;
  position: absolute;
  top: -5px;
  right: -1px;
}

/*左侧栏主盒子*/

.nav_left {
  display: inline-block;
  width: 25%;
  height: 100%;
  background: #f0f0f0;
  position: fixed;
  left: 0px;
  top: 0px;
  z-index: 1000;
  text-align: center;
  box-shadow: inset 0 1px 6px rgba(0, 0, 0, 0.1);
}

/*左侧栏list的item*/

.nav_left .nav_left_items {
  height: 40px;
  line-height: 40px;
  padding: 6px 0;
  font-size: 28rpx;
  color: #333;
}

.nav_left .nav_left_items.active {
  background: #fff;
  border-left: 6rpx solid #47b34e;
  color: #47b34e;
  box-shadow: inset 0 2px 10px rgba(0, 0, 0, 0.2);
}

/*右侧栏主盒子*/

.nav_right {
  position: fixed;
  top: 0;
  right: 0;
  flex: 1;
  width: 75%;
  height: 100%;
  box-sizing: border-box;
  z-index: 0;
  overflow: hidden;
  padding-bottom:80rpx;
}

/*右侧栏list的item*/

.nav_right_items {
  display: flex;
  margin: 0 20rpx;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
}

.nav_right_items + .nav_right_items {
  border-top: 1px solid #e6e6e6;
}

.nav_right_items .left {
  width: 130rpx;
  height: 130rpx;
  margin-right:20rpx;
  position: relative;
}

.nav_right_items .goodImg_w {
  position: relative;
  overflow: hidden;
}
.nav_right_items .good_img {
  width: 130rpx;
  height: 130rpx;
  float: left;
  margin-right: 30rpx;
  border-radius: 5px;
}
.icon_sellout {
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.4);
}
.masking {
  position: absolute;
  bottom: 0;
  left: 0;
  background: rgba(0,0,0,0.4);
  width:130rpx;
  height:55rpx;
  color: #fff;
  font-size:20rpx;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
}
.masking text {
  display: block;
  margin: 0 !important;
}
.fl {
  float: left;
}
.fr {
  float: right;
}

.nav_right_items .right {
  width: 72%;
}

.nav_right_items .right .top text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
  color: #000;
  letter-spacing: 1px;
}

.nav_right_items .right .top .txt_major {
  font-size: 32rpx;
}

.nav_right_items .right .top .txt_sub {
  font-size: 30rpx;
  color: #666;
}

.nav_right_items .right .bottom {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.nav_right_items .right .bottom .price {
  font-size: 32rpx;
  color: red;
}

.nav_right_items .right .bottom .unit {
  font-size: 32rpx;
  color: #666;
 text-decoration:line-through;
}

.nav_right_items .right .bottom .img {
  width:135rpx;
  display:flex;
  margin-top:8rpx;
}

.nav_right_items .right .bottom image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
}

