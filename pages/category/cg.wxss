/* pages/category/cg.wxss */

.ptTop{
  overflow: hidden;
}
page{
  width: 100%;
  height: 100%;
   overflow-x: hidden;}
.top_show {
  margin: 20rpx auto;
  width: 90%;
  height: 200rpx;
}
.top_show image {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.show_lists {
  padding: 0 30rpx;
  overflow: hidden;
  margin-top: 60rpx;
}
.show_lists .each_good {
  width: calc(100% / 3);
  height: 185rpx;
  float: left;
  text-align: center;
}
.show_lists .each_good image {
  width:110rpx;
  height:110rpx;
}
.show_lists .each_good text {
  display: block;
  height: 20rpx;
  font-size: 32rpx;
  color: #333;
}


.loading{  
 padding:10rpx;
text-align:center;
background-color:#EDECE8;
  font-size:22rpx; 
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  color: #333;
}  
.loadingimg{
  width: 20px;
  height: 20px;
}  
.loading.complete:before{  
  display: none;  
}  
