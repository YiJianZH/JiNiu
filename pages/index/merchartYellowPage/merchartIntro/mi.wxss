/* pages/index/merchartYellowPage/merchartIntro/mi.wxss */
page{
  width: 100%;
  height: 100%;
   overflow-x: hidden;}
.mi {
  padding-bottom:180rpx;
}
.shop_sign {
  position: relative;
}
.shop_sign .img_wrap {
  width: 100%;
  height: 750rpx;
}
.shop_sign .img_wrap image {
  width: 100%;
  height: 100%;
}
.shop_sign .bottom_info {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  line-height: 80rpx;
  background: rgba(0,0,0, .4);
  color: #fff;
  font-family: '黑体';
  font-size: 36rpx;
  font-weight: 700;
  text-indent: 0.5rem;
}

.mi_info {
  font-size: 32rpx;
  color: #666;
}
.mi_info .info_top {
  display: flex;
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #f5f5f5;
}
.mi_info .info_top image {
  width:35rpx;
  height:36rpx;
  margin-right:25rpx;
}
.mi_info .info_top .icon_markb {
  width: 32rpx;
  height: 40rpx;
}

.mi_info .info_bottom {
  padding: 0 20rpx;
}
.mi_info .info_bottom .txt {
  padding: 20rpx 0;
}
.mi_info .info_bottom .user_info {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}
.mi_info .info_bottom .star_evaluation {

}
.mi_info .info_bottom .star_evaluation image {
  width: 22rpx;
  height: 22rpx;
}

.spacing {
  width: 100%;
  height: 30rpx;
  background: #f5f5f5;
}

button {
  position: fixed;
  bottom: 3%;
  left: 5%;
  width: 90%;
  line-height: 90rpx;
  border-radius: 8px;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background: #47b34e;
}

.ptColor button{
  background: #0066ff;
}