/* pages/index/shang/shang.wxss */
page{
  background-color: #f5f5f5;
  width: 100%;
  height: 100%;
   overflow-x: hidden;}
.head{
  overflow: hidden;
}

.headOne{
  width: 90%;
  height: auto;
  overflow: hidden;
  margin: 30rpx auto;
  padding-bottom: 15rpx;
  padding-top: 15rpx;
}

.headOne  > view{
  width: 40%;
  height: auto;
  overflow: hidden;
  font-size: 30rpx;
  color: #fff;
  background-color: #47b34e;
  text-align: center;
  line-height: 80rpx;
  border-radius: 6px;
  margin: 0 auto;
}


.headUl{
  overflow: hidden;
  width: 100%;
  height: auto;
  margin: 0 auto;
  background-color: #fff;
}

.headUl text{
  width: 95%;
  height: auto;
  overflow: hidden;
  margin: 0 auto;
  border-bottom: solid 1px #e6e6e6;
  font-size: 30rpx;
  color: #333;
  padding-bottom: 30rpx;
  padding-top: 30rpx;
  display: block;
}

.ptColor{
  overflow: hidden;
}

.ptColor .headOne  > view{
  background-color: #0066ff;}












