
.cityIn{
  width: 90%;
  height: auto;
  overflow: hidden;
  background-color: #fff;
  border-radius: 4px;
  display: flex;
  align-items: center;
  margin: 0 auto;
}

.ptTop{
  background-color: #47b34e;
  padding-bottom: 15px;
  padding-top: 15px;
}

.cityIn input{
  width: 100%;
  height: auto;
  overflow: hidden;
  font-size: 30rpx;
  color: #333;
  text-indent:0.5em;
}

.cityInImg{
  display: block;
  width: 50rpx;
  height: 50rpx;
  overflow: hidden;
  margin-left: 0.5em;
}


.searchLetter {
  position: fixed;
  right: 0;
  width: 50rpx;
  text-align: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  color: #666;
  z-index: 1;
}

.searchLetter view {
  margin-top: 20rpx;
}

.touchClass {
  background-color: #fff;
  color: #fff;
  padding-top: 46rpx;
}

.showSlectedLetter {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  font-size: 52rpx;
  z-index: 1;
}

.selection {
  display: flex;
  width: 100%;
  flex-direction: column;
  margin-top: 10rpx;
}

.item_letter {
  display: flex;
  background-color: #f5f5f5;
  height: 40rpx;
  padding-left: 34rpx;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.item_city {
  display: flex;
  background-color: #fff;
  height: 100rpx;
  padding-left: 34rpx;
  align-items: center;
  border-bottom: 1rpx solid #ededed;
  font-size: 24rpx;
  color: #666;
}

.hotcity-common {
  font-size: 24rpx;
  color: #666;
  padding: 0 0 0 30rpx;
}

.thisCity {
  padding-top: 30rpx;
}

.thisCityName {
  display: inline-block;
  border: 1rpx solid #47b34e;
  border-radius: 8rpx;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #47b34e;
  text-align: center;
  min-width: 149.5rpx;
  margin: 20rpx 0 20rpx 30rpx;
}

.thishotText {
  color: #47b34e;
  font-size: 20rpx;
  margin: 0 !important;
}

.slectCity {
  border-color: #47b34e !important;
}

.slectCity view {
  color: #47b34e !important;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 10rpx 0;
  width: 149.5rpx;
  box-sizing: border-box;
  border: 1rpx solid #ececec;
  border-radius: 8rpx;
  margin: 10rpx 12rpx;
}

.weui-grid__label {
  display: block;
  text-align: center;
  color: #333;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.ptColor{
  overflow: hidden;
}
.ptColor .ptTop{
  background-color: #0066ff;}
  
.ptColor .thisCityName {
  border: 1rpx solid #0066ff;
  color: #0066ff;
  }
  
.ptColor .thishotText {
  color: #0066ff;}
  
.ptColor .slectCity {
  border-color: #0066ff !important;
}

.ptColor .slectCity view {
  color: #0066ff !important;
}