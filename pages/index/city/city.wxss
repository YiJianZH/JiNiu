
page{
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  overflow: hidden;
}

.citySeach{
  width: 100%;
  height: auto;
  overflow: hidden;
  position: fixed;
  left: 0px;
  top: 0px;
  z-index: 1;
  background-color: #fff;
}

.cityCen{
  width: 95%;
  height: auto;
  overflow: hidden;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}

.cityTxt{
  overflow: hidden;
  display: flex;
  align-items: center;
}

.cityName{
  overflow: hidden;
  font-size: 30rpx;
  color: #333;
  margin-right: 0.5em;
}

.cityDown{
  width: 14rpx;
  height: 10rpx;
  display: block;
}

/* cityIn */

.cityIn{
  width: calc( 100% - 70px );
  height: auto;
  overflow: hidden;
  background-color: #fff;
  border-radius: 4px;
  display: flex;
  align-items: center;
}

.cityIn input{
  width: 100%;
  height: auto;
  overflow: hidden;
  font-size: 30rpx;
  color: #333;
  text-indent:0.5em;
}

.cityInImg{
  display: block;
  width: 50rpx;
  height: 50rpx;
  overflow: hidden;
  margin-left: 0.5em;
}

/* cityBg */

.cityBg{
  box-sizing: border-box;
  width: 100%;
  height: 550rpx;
  /* overflow: auto; */
  overflow-x: hidden;
  overflow-y: scroll;
  background-color: #fff;
  /* position: fixed;
  left: 0px;
  bottom: 0px;
